@page
@model EmpDash.Pages.RegistrationPModel
@{
}

<div class="container mt-5">
    <h2>Register</h2>
  <form method="post" class="register-form" id="registerForm">
    <div class="form-group">
            <label asp-for="User.FirstName" for="username"></label>
            <input asp-for="User.FirstName" class="form-control" id="username" aria-required="true" />
            <span asp-validation-for="User.FirstName" class="error-message"></span>
    </div>

        <div>
            <label>Email:</label>
            <input type="email" class="form-control" asp-for="User.Email" required />
            <span asp-validation-for="User.Email" class="text-danger"></span>
        </div>

        <div>
            <label>Password:</label>
            <input type="password" class="form-control" asp-for="User.Password" required />
            <span asp-validation-for="User.Password" class="text-danger"></span>
        </div>

        <a class="nav-link text-dark" asp-area="" asp-page="/LoginP">Already have an account?</a>

        <button type="submit" class="btn-primary">Register</button>
    </form>

	
</div>